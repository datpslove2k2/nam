<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="179dp"
        android:background="@drawable/bg_wid"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img1"
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:src="@mipmap/ic_launcher"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/nameBurger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/img1"
            android:layout_toRightOf="@+id/img1"
            android:text="Tên khoa học:"
            android:textColor="#000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dir_burger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameBurger"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/img1"
            android:text="Tên thường gọi:"
            android:textColor="#000"
            android:textSize="14sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/priceBurger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dir_burger"
            android:layout_marginStart="11dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/img1"
            android:layout_toRightOf="@+id/img1"
            android:text="Đặc tính:"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/priceBurger"
            android:layout_marginStart="11dp"
            android:layout_marginLeft="11dp"
            android:layout_toEndOf="@+id/img1"
            android:layout_toRightOf="@+id/img1"
            android:text="Màu lá:"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tyty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtxt"
            android:layout_marginStart="11dp"
            android:layout_marginLeft="11dp"
            android:layout_toEndOf="@+id/img1"
            android:layout_toRightOf="@+id/img1"
            android:text="Công dụng:"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tyty2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tyty"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/img1"
            android:layout_toRightOf="@+id/img1"
            android:text="Dược tính:"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tyty3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tyty2"
            android:layout_marginStart="9dp"
            android:layout_marginLeft="9dp"
            android:layout_toEndOf="@+id/img1"
            android:layout_toRightOf="@+id/img1"
            android:text="Chú ý:"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_Delete"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/round_bg"
            android:text="Delete"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/txt_NameKH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="18dp"
            android:layout_toEndOf="@+id/nameBurger"
            android:text="TextView"
            android:textColor="#000" />

        <TextView
            android:id="@+id/txt_NameTG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_NameKH"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/nameBurger"
            android:text="TextView"
            android:textColor="#000" />

        <TextView
            android:id="@+id/txt_DacTinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_NameTG"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="-20dp"
            android:layout_marginEnd="58dp"
            android:layout_toEndOf="@+id/nameBurger"
            android:text="TextView"
            android:textColor="#000" />

        <TextView
            android:id="@+id/txt_MauLa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_DacTinh"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="-19dp"
            android:layout_marginEnd="57dp"
            android:layout_toEndOf="@+id/nameBurger"
            android:text="TextView"
            android:textColor="#000" />

        <TextView
            android:id="@+id/txt_CongDung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_MauLa"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="-9dp"
            android:layout_marginEnd="47dp"
            android:layout_toEndOf="@+id/nameBurger"
            android:text="TextView"
            android:textColor="#000" />

        <TextView
            android:id="@+id/txt_DuocTinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_CongDung"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="-17dp"
            android:layout_marginEnd="65dp"
            android:layout_toEndOf="@+id/nameBurger"
            android:text="TextView"
            android:textColor="#000" />

        <TextView
            android:id="@+id/txt_ChuY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_DuocTinh"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="-41dp"
            android:layout_marginEnd="89dp"
            android:layout_toEndOf="@+id/nameBurger"
            android:text="TextView"
            android:textColor="#000" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>